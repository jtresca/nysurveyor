<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://www.joomla.org/xml/dtd/1.5/plugin-install.dtd">
<install type="plugin" group="editors-xtd" version="1.5">
	<name>PLG_EDITORS-XTD_SLIDER</name>
	<description>PLG_EDITORS-XTD_SLIDER_DESC</description>
	<version>1.5.2</version>
	<creationDate>July 2011</creationDate>
	<author>NoNumber! (Peter van Westen)</author>
	<authorEmail>peter@nonumber.nl</authorEmail>
	<authorUrl>http://www.nonumber.nl</authorUrl>
	<copyright>Copyright Â© 2011 NoNumber! All Rights Reserved</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<!-- Files -->
	<files>
		<filename plugin="slider">slider.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>css</folder>
		<folder>images</folder>
	</files>

	<!-- Parameters -->
	<config>
		<fields name="params" addfieldpath="/plugins/system/nonumberelements/elements">
			<fieldset name="basic">
				<field name="@loadlanguage" type="loadlanguage" extension="plg_editors-xtd_slider" />
				<field name="@license" type="license" extension="SLIDER" />
				<field name="@version" type="version" extension="SLIDER" xml="/plugins/editors-xtd/slider/slider.xml" />
				<field name="@dependency" type="dependency"
					label="SLD_THE_SYSTEM_PLUGIN"
					file="/plugins/system/slider/slider.php" />
				<field name="@header" type="header"
					label="SLIDER"
					description="SLIDER_DESC"
					xml="/plugins/editors-xtd/slider/slider.xml"
					image="/plugins/editors-xtd/slider/images/logo.png"
					image_w="60" image_h="80"
					url="http://www.nonumber.nl/slider"
					help_url="http://www.nonumber.nl/slider" />
			</fieldset>
		</fields>
	</config>
</install>